<div class="container">
  <p class="h2 text-center mt-4">Edit Photo</p>

  <div class="row mt-4">
    <div class="col-md-4 mx-auto">
      <div class="myform form">
        <form action="/photos/update" method="post" name="update">
          <input type="hidden" name="id" id="id" value="<%= id %>">

          <div class="form-group mt-2">
            <input type="text" name="title" class="form-control" id="title" placeholder="Title" value="<%= title %>" required="required">
          </div>

          <div class="form-group mt-2">
            <input type="text" name="description" class="form-control" id="description" placeholder="Description" value="<%= description %>" required="required">
          </div>

          <div class="form-group mt-2">
            <input type="number" min="0" max="10" step="0.1" name="rate" id="rate" class="form-control" placeholder="Rate" value="<%= rate %>" required="required">
          </div>

          <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary">Update</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
